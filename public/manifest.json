{
  "name": "Currency Converter",
  "description": "Currency conversion anywhere",
  "version": "1.1",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "icons": {
      "16": "logo512.png",
      "48": "logo512.png",
      "128": "logo512.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
 ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "css": ["/static/css/main.css"],
        "js": ["/static/js/content.js"]
    }
 ]
}